<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oespinProyectoPaex.ConsultarRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista De Usuarios " FontSize="20" HorizontalTextAlignment="Center"></Label>
            <ListView x:Name="ListaEstudiante" ItemSelected="ListaEstudiante_ItemSelected_1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}" ></TextCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>