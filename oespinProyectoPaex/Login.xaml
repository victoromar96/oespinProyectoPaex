<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oespinProyectoPaex.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE INICIO" FontSize="24" HorizontalTextAlignment="Center"></Label>
            <Image Source="https://revista.uisrael.edu.ec/images/uisrael.png" WidthRequest="90" HeightRequest="90"></Image>
            <Entry x:Name="txtUsuario" Placeholder="Usuario" ></Entry>

            <Label x:Name="txtNombre"  IsEnabled="False" ></Label>
            <Label x:Name="txtApellido"  IsEnabled="False"></Label>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True" ></Entry>
            
            <Button x:Name="btnIniciar"  Text="Iniciar Sesion" Clicked="btnIniciar_Clicked"></Button>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>