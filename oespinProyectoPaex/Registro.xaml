<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oespinProyectoPaex.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Regisrto de Usuarios" FontSize="24" HorizontalTextAlignment="Center" ></Label>
            <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="COntraseña" IsPassword="True"></Entry>
            
            

            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>